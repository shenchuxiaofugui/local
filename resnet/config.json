{
    "name": "yixuefenlei_Net",
    "n_gpu": 3,
    "gpu_list": [1,2,3],

    "arch": {
        "type": "Classifier",
        "args": {}
    },
    "data_loader": {
        "type": "ClassDataLoader",
        "args":{
            "data_dir": "/homes/syli/dataset/resnet/EC_all",
            "use_roi": "False",
            "modals": ["T1CE", "DWI"],
            "batch_size": 250,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0.001,
            "amsgrad": true
        }
    },
    "loss": "cross_loss",
    "metrics": [
        "accuracy", "AUC"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 40,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
